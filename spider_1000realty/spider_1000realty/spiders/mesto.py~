# -*- coding: utf-8 -*-
import scrapy


class MestoSpider(scrapy.Spider):
    name = "mesto"
    allowed_domains = ["kiev.mesto.ua"]
    start_urls = (
        'http://www.kiev.mesto.ua/sale/',
    )

    def parse(self, response):
        for i in range(1,4):
            url = response.urljoin('?page=%d'%i)
            print url
            yield scrapy.Request(url, callback=self.parse_dir_contents, dont_filter = True)
        pass

    def parse_dir_contents(self, response):
        print "HELLO!"

